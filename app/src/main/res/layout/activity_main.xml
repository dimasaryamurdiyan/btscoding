<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/registerAset"
                android:layout_width="231dp"
                android:layout_height="240dp"
                android:layout_marginTop="64dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/logo_vertical"/>
            <Button
                android:id="@+id/button_login_post_splash"
                android:layout_width="325dp"
                android:layout_height="45dp"
                android:layout_below="@id/registerAset"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="49dp"
                android:text="Masuk"
                android:textSize="13dp"
                android:textColor="@color/fontWhite"
                android:textAllCaps="false"
                app:backgroundTint="@color/fontBase"/>
            <Button
                android:id="@+id/button_register_post_splash"
                android:layout_width="325dp"
                android:layout_height="45dp"
                android:layout_below="@id/button_login_post_splash"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:text="Daftar"
                android:textSize="13dp"
                android:textColor="@color/fontBase"
                android:textAllCaps="false"
                app:strokeWidth="2sp"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                app:backgroundTint="@color/fontWhite"
                app:strokeColor="@color/fontBase"/>

        </RelativeLayout>
    </ScrollView>

</RelativeLayout>